{
  "expo": {
    "name": "Kreno",
    "slug": "Kreno",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kreno",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/sounds/notification.wav"
          ]
        }
      ]
    ],
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification",
          "remote-notification"
        ],
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.myrajaafar.Kreno"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.myrajaafar.Kreno",
      "googleServicesFile": "./google-services.json",
      "useNextNotificationsApi": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "notification": {
      "icon": "./assets/images/notification-icon.png",
      "color": "#ffffff",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "Kreno",
      "channels": [
        {
          "name": "lesson-reminders",
          "importance": "high",
          "sound": true,
          "vibrate": true,
          "description": "Reminders for upcoming lessons"
        },
        {
          "name": "lesson-evaluations",
          "importance": "default",
          "sound": true,
          "vibrate": false,
          "description": "Reminders to evaluate completed lessons"
        },
        {
          "name": "daily-tips",
          "importance": "default",
          "sound": true,
          "vibrate": false,
          "description": "Daily learning tips based on your performance"
        }
      ]
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e634c9d9-e549-42b4-b06f-e75445e40d0e"
      }
    }
  }
}
